<odoo>
    <data>
        <record id="view_cancel_wizard_form" model="ir.ui.view">
            <field name="name">view.cancel_wizard.form</field>
            <field name="model">cancel.request.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel Reason">
                    <sheet>
                        <label for="reason"/>
                        <field name="reason"/>
                    </sheet>
                    <footer>
                        <button name="cancel_request" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>