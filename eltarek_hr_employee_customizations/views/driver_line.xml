<odoo>
    <data>

        <record id="view_driver_line_form" model="ir.ui.view">
            <field name="name">view.driver.line.form</field>
            <field name="model">driver.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="type_id"/>
                        <field name="driver_type_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="truck_number"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>